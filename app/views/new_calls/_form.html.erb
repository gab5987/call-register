<%= form_with(model: new_call) do |form| %>
  <% if new_call.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(new_call.errors.count, "error") %> prohibited this new_call from being saved:</h2>

      <ul>
        <% new_call.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :data, style: "display: block" %>
    <%= form.text_field :date, :value => Date.today.strftime("%e / %m / %Y") %>
  </div>

  <div class="pt-3">
    <%= form.label :local, style: "display: block" %>
    <%= form.text_field :local %>
  </div>

  <div class="pt-3">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="pt-3">
    <%= form.label :pedido, style: "display: block" %>
    <%= form.select :request, 
      ['Desligar', 'Ligar', 'Diminuir', 'Aumentar', 'Iluminação', 'Evento', 'Inversor'],
      :class => "dropdown-iten"
    %>
  </div>

  <div class="pt-5">
    <%= form.submit "registrar chamado", :class => "btn btn-info" %>
  </div>
<% end %>